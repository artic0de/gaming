local e = aura_env

-- You can edit values below

-- e.buffs has next options:
-- 1) both - tracking arcane blast (ab) while arcane power (ap) AND rune of power (rop) buffs are active;
-- 2) oneof - tracking ab while ap OR rop buff is active;
-- 3) ap - tracking ab while ap buff only is active;
-- 4) rop - tracking ab while rop buff only is active

e.buffs = 'ap'
e.resetTime = 10 -- Reset counter after time since last buffed cast


-- Do not edit code below if you don't know what you do

e.count = 0
e.lastCastTime = 0
e.get_buffs = {
    ["both"] = function (x) return WA_GetUnitAura("player", 190319) and WA_GetUnitAura("player", 116014) end,
    ["oneof"] = function (x) return WA_GetUnitAura("player", 190319) or WA_GetUnitAura("player", 116014) end,
    ["ap"] = function (x) return WA_GetUnitAura("player", 190319) end,
    ["rop"] = function (x) return WA_GetUnitAura("player", 116014) end,
}
